---
import Container from "./Container.astro";
import LogoZenithB from "../assets/Img/isotipoZenithBlanco.png";

const links = [
  {
    to: "/#Nosotros",
    label: "Nosotros",
  },
  {
    to: "/#Servicios",
    label: "Servicios",
  },
  // {
  //     to: "/#Etapas",
  //     label: "Etapas",
  // },
];
---

<script
  src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
  defer
></script>

<script>
  let isToggled = false;
  const navlinks = document.querySelector("#navlinks");
  const hamburger = document.querySelector("#hamburger");
  const layer = document.querySelector("#navLayer");
  const links = [...navlinks.querySelector("ul").children];

  function toggleNavlinks() {
    if (isToggled) {
      navlinks.classList.add(
        "!visible",
        "!scale-100",
        "!opacity-100",
        "!lg:translate-y-0"
      );
      hamburger.classList.add("toggled");
      layer.classList.add("origin-top", "scale-y-100");
    } else {
      navlinks.classList.remove(
        "!visible",
        "!scale-100",
        "!opacity-100",
        "!lg:translate-y-0"
      );
      hamburger.classList.remove("toggled");
      layer.classList.remove("origin-top", "scale-y-100");
    }
  }
  hamburger.addEventListener("click", () => {
    isToggled = !isToggled;
    toggleNavlinks();
  });

  links.forEach((link) => {
    link.addEventListener("click", () => {
      isToggled = !isToggled;
      toggleNavlinks();
    });
  });
</script>

<header>
  <div
    class="text-gray-700 absolute z-10 w-full border-b border-black/5 dark:border-white/5 lg:border-transparent"
  >
    <div
      x-data="{ open: false }"
      class="flex flex-col max-w-screen-xl px-4 mx-auto md:items-center md:justify-between md:flex-row md:px-6 lg:px-8"
    >
      <div class="p-4 flex flex-row items-center justify-between">
        <a
          href="#"
          class="text-lg font-semibold tracking-widest text-gray-900 uppercase rounded-lg dark-mode:text-white focus:outline-none focus:shadow-outline"
        >
          <img class="w-12" src={LogoZenithB} alt="" />
        </a>
        <button
          class="md:hidden rounded-lg focus:outline-none focus:shadow-outline"
          @click="open = !open"
        >
          <svg fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6">
            <path
              x-show="!open"
              fill-rule="evenodd"
              d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z"
              clip-rule="evenodd"></path>
            <path
              x-show="open"
              fill-rule="evenodd"
              d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
              clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>
      <nav
        :class="{'flex': open, 'hidden': !open}"
        class="flex-col flex-grow pb-4 md:pb-0 hidden md:flex md:justify-center md:flex-row"
      >
        <ul
          class="flex flex-col gap-6 tracking-wide lg:flex-row lg:gap-0 lg:text-sm"
        >
          <div
            class="w-full text-gray-600 dark:text-gray-200 lg:w-auto lg:pt-0"
          >
            <ul
              class="flex flex-col gap-6 tracking-wide lg:flex-row lg:gap-0 lg:text-sm"
            >
              {
                links.map((link) => (
                  <li>
                    <a
                      href={link.to}
                      class="text-base hover:text-primary text-white block transition dark:hover:text-white md:px-4 hover:font-bold"
                    >
                      <span>{link.label}</span>
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </ul>
        <div class="mt-12 lg:mt-0 md:hidden">
          <a
            href="https://api.whatsapp.com/send?phone=+5493865751144&text=Hola Zenith Agency, quisiera recibir mas información de sus servicios."
            class="boton relative flex h-12 items-center justify-center px-8 before:absolute before:inset-0 hover:bg-primary/10 bg-tercer before:text-white before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 sm:w-max"
          >
            <span class="relative text-sm font-semibold text-white">
              Contacto</span
            >
          </a>
        </div>
      </nav>
      <div class="mt-12 lg:mt-0 hidden lg:block">
        <a
          href="https://api.whatsapp.com/send?phone=+5493865751144&text=Hola Zenith Agency, quisiera recibir mas información de sus servicios."
          class="boton relative flex h-9 items-center justify-center px-6 before:absolute before:inset-0 hover:bg-primary/10 bg-tercer before:text-white before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 sm:w-max astro-M4TVE3SD"
        >
          <span class="relative text-sm font-semibold text-white">
            Contacto</span
          >
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  .logo {
    width: 75px;
  }

  #toggle_nav:checked ~ div #hamburger #line {
    @apply translate-y-1.5 rotate-45;
  }

  #toggle_nav:checked ~ div #hamburger #line2 {
    @apply -translate-y-1 -rotate-45;
  }

  .toggled div:first-child {
    @apply translate-y-1.5 rotate-45;
  }
  .toggled div:last-child {
    @apply -translate-y-1 -rotate-45;
  }

  .z {
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }

  .boton {
    border-radius: 5px;
  }

  @media only screen and (max-width: 768px) {
    nav {
      background-color: rgb(173 136 246 / 89%);
      align-items: end;
      padding: 35px;
      border-radius: 2rem;
      height: 35vh;
    }
  }
</style>
